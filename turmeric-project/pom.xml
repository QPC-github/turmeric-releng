	<profiles>
		<profile>
			<id>headercheck</id>
			<build>
				<plugins>
					<plugin>
						<groupId>org.ebayopensource.turmeric.toolchain</groupId>
						<artifactId>license-check-maven-plugin</artifactId>
						<version>1-SNAPSHOT</version>
						<executions>
							<execution>
								<id>headercheck-all</id>
								<goals>
									<goal>check</goal>
								</goals>
								<configuration>
									<reportFormat>checkstyleXml</reportFormat>
									<outputFilename>checkstyle-results-headers.xml</outputFilename>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
		<profile>
			<id>ebayrefs</id>
			<build>
				<plugins>
					<plugin>
						<groupId>org.ebayopensource.turmeric.toolchain</groupId>
						<artifactId>banned-references-maven-plugin</artifactId>
						<version>1-SNAPSHOT</version>
						<executions>
							<execution>
								<id>ebayrefcheck</id>
								<phase>validate</phase>
								<goals>
									<goal>check</goal>
								</goals>
								<configuration>
									<reportFormat>checkstyleXml</reportFormat>
									<outputFile>${project.build.directory}/checkstyle-results-ebayrefs.xml</outputFile>
									<includes>
										<include>com.ebay</include>
										<include>www.ebay.com</include>
										<include>SOATools</include>
										<include>SOAClient</include>
										<include>SOAServer</include>
										<include>BindingFwk</include>
									</includes>
									<excludes>
										<!-- License Headers -->
										<exclude>ebay inc</exclude>
										<!-- Legitimate New Name -->
										<exclude>ebayopensource</exclude>
										<!-- UKernel References (pom dependency and import statements) -->
										<exclude>com.ebay.kernel</exclude>
										<exclude>urn:ebay:apis:eBLBaseComponents</exclude>
										<exclude>urn:ebay:api:PayPalAPI</exclude>
										<exclude>urn:ebay:apis:CoreComponentTypes</exclude>
										<exclude>urn:ebay:api:PayPalAPI</exclude>
										<exclude>http://www.ebay.com/marketplace/search/v1/services</exclude>
										<exclude>http://www.ebay.com/marketplace/services</exclude>
										<exclude>com.ebay.soa.my</exclude>
										<exclude>com.ebay.soa.my.interface</exclude>
										<exclude>com.ebay.my.transport.extra</exclude>
										<exclude>com.ebay.mypackage</exclude>
										<exclude>com.ebay.soa.blah</exclude>
										<exclude>com.ebay.myhandlers</exclude>
										<exclude>com.ebay.configuration</exclude>
										<exclude>com.ebay.afs</exclude>
										<exclude>http://www.ebay.com/soaframework/service/ComplexService</exclude>
									</excludes>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
		<profile>
			<id>analysis</id>
			<build>
				<plugins>
					<plugin>
						<groupId>org.codehaus.mojo</groupId>
						<artifactId>findbugs-maven-plugin</artifactId>
						<version>2.3.2</version>
						<executions>
							<execution>
								<id>hudson-findbugs</id>
								<goals>
									<goal>findbugs</goal>
								</goals>
								<configuration>
									<findbugsXmlOutput>true</findbugsXmlOutput>
									<failOnError>false</failOnError>
								</configuration>
							</execution>
						</executions>
					</plugin>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-pmd-plugin</artifactId>
						<version>2.5</version>
						<executions>
							<execution>
								<id>nightly-pmd</id>
								<goals>
									<goal>pmd</goal>
									<goal>cpd</goal>
