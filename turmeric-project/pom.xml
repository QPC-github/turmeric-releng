	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<!-- Enable Maven Central version when patches applied on Axis Side <axis-groupId>org.apache.axis2</axis-groupId> 
			<axis-version>1.4</axis-version> -->
